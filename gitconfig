[color]
	ui = true
[user]
	name = Daniel Tsioni 
	email = dtsioni@gmail.com
[push]
	default = matching
[push]
  	# Push current branch even if you've never pushed it before
  	default = current
[branch]
	# will automatically rebase when you pull
  	autosetuprebase = always
[rerere]
	# will remember rebase conflict resolutions
  	enabled = 1
[fetch]
  	prune = true
[alias]
	ll = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
	lc = log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --numstat
	ld = log -u
	d = diff
	s = status
	a = add
	co = checkout
	cm = commit -m
	riom = rebase -i origin/master
	unstage = reset HEAD
